@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                
            </div>

        </div>
        <div class="form-group">
            <button asp-controller="Category" asp-action="Create" type="submit" class="btn btn-primary">Create</button>
            <button asp-controller="Category" asp-action="Index" class="btn btn-md rounded font-sm hover-up btn-primary">Go Back</button>

        </div>
    </form>
</div>


